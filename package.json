{
  "name": "estrutura",
  "version": "1.0.0",
  "description": "Estrutura de EAD com controle de SCORM 1.2, criada em 11/2016",
  "scripts": {
    "server": "browser-sync start --server --files '**/*' --reload-delay 200",
    "bundle": "npm run build:css && npm run build:js && npm run build:compiler",
    
    "build:css": "node src/build/r.js -o src/build/buildCSS.js",
    "build:js": "node src/build/r.js -o src/build/buildJS.js",
    "build:compiler": "node src/build/compiler.js"
  },
  "dependencies": {
    "archiver": "^1.3.0",
    "copy": "^0.3.0",
    "delete": "^0.3.2",
    "mkdirp": "^0.5.1",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "browser-sync": "^2.18.8"
  }
}
